{
  "compilerOptions": {
    "target": "es6",                            
    "module": "commonjs",                       
    "outDir": "dist/",                              
    "removeComments": true,                     
    "strict": true,                             
    "moduleResolution": "node",              
    "esModuleInterop": true,                    
    "sourceMap": true,                      
    "forceConsistentCasingInFileNames": true    
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
  
}
